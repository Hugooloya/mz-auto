<section id="contact" class="contact">
    <div class="container">
        <h2>Contact Us</h2>
        <div class="contact-wrapper">
            <div class="contact-info">
                <h3>Get In Touch</h3>
                <p>
                    Ready to give your car the shine it deserves? Contact us
                    today!
                </p>

                <div class="info-item">
                    <span class="label">Email:</span>
                    <a href="mailto:info@mzautodetail.com"
                        >info@mzautodetail.com</a
                    >
                </div>
                <div class="info-item">
                    <span class="label">Phone:</span>
                    <a href="tel:+15551234567">(555) 123-4567</a>
                </div>
                <div class="info-item">
                    <span class="label">Area:</span>
                    <span>Serving the Greater Metro Area</span>
                </div>
            </div>
            <div class="form-container">
                <form>
                    <div class="form-group">
                        <input type="text" placeholder="Name" required />
                    </div>
                    <div class="form-group">
                        <input type="email" placeholder="Email" required />
                    </div>
                    <div class="form-group">
                        <textarea placeholder="Message" rows="5" required
                        ></textarea>
                    </div>
                    <button type="submit" class="submit-btn" disabled
                        >Send Message (Demo)</button
                    >
                </form>
            </div>
        </div>
    </div>
</section>

<style>
    .contact {
        padding: 5rem 0;
        background-color: #222;
    }
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }
    h2 {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 3rem;
        text-transform: uppercase;
        letter-spacing: 2px;
    }
    .contact-wrapper {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
    }
    .contact-info h3 {
        font-size: 2rem;
        margin-bottom: 1rem;
    }
    .contact-info p {
        color: var(--color-text-muted);
        margin-bottom: 2rem;
    }
    .info-item {
        margin-bottom: 1rem;
        font-size: 1.1rem;
    }
    .label {
        font-weight: 700;
        color: var(--color-accent);
        margin-right: 0.5rem;
    }
    .info-item a {
        color: var(--color-text);
        text-decoration: none;
        transition: color 0.2s;
    }
    .info-item a:hover {
        color: var(--color-accent);
    }

    .form-group {
        margin-bottom: 1.5rem;
    }
    input,
    textarea {
        width: 100%;
        padding: 1rem;
        background: #333;
        border: 1px solid #444;
        border-radius: 4px;
        color: white;
        font-family: inherit;
    }
    input:focus,
    textarea:focus {
        outline: none;
        border-color: var(--color-accent);
    }
    .submit-btn {
        width: 100%;
        padding: 1rem;
        background-color: var(--color-accent);
        color: white;
        border: none;
        border-radius: 4px;
        font-weight: 700;
        cursor: pointer;
        text-transform: uppercase;
        letter-spacing: 1px;
    }
    .submit-btn:hover {
        background-color: #0099cc;
    }

    @media (max-width: 768px) {
        .contact-wrapper {
            grid-template-columns: 1fr;
            gap: 2rem;
        }
    }
</style>
